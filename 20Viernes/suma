#include <stdio.h>
#include <stdlib.h>

int main() {
    int x;
    int suma = 0;

    printf("Ingrese un numero: ");
    scanf("%d", &x);

    while (x != 0) {
        suma += x;
        printf("Ingrese un numero: ");
        scanf("%d", &x);
    }

    printf("La suma total es: %d\n", suma);
    return 0;
}
